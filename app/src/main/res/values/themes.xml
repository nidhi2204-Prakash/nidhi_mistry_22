<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrakashJobApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFF49301</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/grey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
<!--        <item name="android:statusBarColor">@color/transprenrt</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">false</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
    <style name="single_line" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:keyTextSize">@dimen/dimen_30dp</item>
        <item name="android:background">@color/et_background</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:weightSum">@dimen/dimen_30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
    </style>
    <style name="et_weight_1" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:keyTextSize">@dimen/dimen_30dp</item>
        <item name="android:background">@color/et_background</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:weightSum">@dimen/dimen_30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="passwordToggleEnabled">true</item>
    </style>
    <style name="RadioButtonStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="et_inp_text" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F0EDED</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart"> @drawable/ic_baseline_lock_24</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="linear_layout"  parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
    </style>
    <style name="text_view" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title_textView" parent="Widget.AppCompat.TextView">
        <item  name="android:layout_width">wrap_content</item>
        <item  name="android:layout_height">wrap_content</item>
        <item  name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item  name="android:textSize">20sp</item>
    </style>
    <style name="DialogTheme." parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange</item>  // you can change the color of the yearPiker dialog
    </style>
    <style name="text_input_edittext" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F0EDED</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_input_text_layout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" >@dimen/dimen_30dp</item>
    </style>
    <style name="style_back_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:src">@drawable/back_arrow</item>
    </style>
    <style name="style_edit_pen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="login_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/dimen_16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="pervious_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/previous_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/previous</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="user_name_textview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="card_textview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="icon_image_view" >
        <item name="android:layout_width">@dimen/dimen_40dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="circular_image_view">
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:background">@drawable/custum_circle</item>
    </style>
    <style name="card_view">
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimen_20dp</item>
    </style>
    <style name="heading_textview_1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
    \</style>
</resources>