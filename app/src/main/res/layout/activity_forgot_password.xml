<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ForgotPassword">


    <ImageView
        android:id="@+id/backarrow_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/text_forgot_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_50dp"
            android:text="Forgot your Password?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,RtlCompat" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_50dp"
            android:text="Enter your registered email below"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_50dp"
            android:text="to recieve email."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/enter_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:background="@drawable/custom_edittext"
            android:enabled="false"
            android:hint="Enter your email"
            android:paddingStart="15dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/send_button"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_70dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_weight="0"
            android:background="@drawable/custum_button"
            android:backgroundTint="#F49301"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:text="Remember your password?"
            android:textColor="#9C9A9A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
     </LinearLayout>
    </LinearLayout>
</LinearLayout>